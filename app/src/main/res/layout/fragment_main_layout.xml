<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="viewModel"
            type="ru.awawa.weatherapp.ui.main.current.CurrentWeatherViewModel" />
        <variable
            name="buttonClickListener"
            type="android.view.View.OnClickListener" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:padding="5dp"
            android:textSize="18sp"
            android:textColor="@android:color/black"
            android:text="@{viewModel.currentWeather.cityName}"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:padding="5dp"
            android:textSize="18sp"
            android:textColor="@android:color/black"
            android:text='@{"Latitude: " + Float.toString(viewModel.currentWeather.coordinates.latitude) + " Longitude: " + Float.toString(viewModel.currentWeather.coordinates.longitude)}' />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:padding="5dp"
            android:textSize="18sp"
            android:textColor="@android:color/black"
            android:text='@{String.format("Temperature: %.2f°C", viewModel.currentWeather.mainData.temperature - 273)}'/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:textAlignment="center"
            android:textSize="18sp"
            android:textColor="@android:color/black"
            android:text='@{String.format("Min temperature: %.2f°C Max temperature: %.2f°C", viewModel.currentWeather.mainData.minTemperature - 273, viewModel.currentWeather.mainData.maxTemperature - 273)}'/>

        <Button
            android:id="@+id/btSearch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/search_city"
            app:clickListener="@{buttonClickListener}"/>

    </LinearLayout>
</layout>